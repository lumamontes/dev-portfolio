---
import ExperienceCard from '@/components/ExperienceCard.astro';
import type { Experience } from '../../data/ui';

interface Props {
  title: string;
  subtitle: string;
  experiences: Experience[];
}

const { title, subtitle, experiences } = Astro.props;
---
<div>
  <div class="flex items-center gap-3 mb-8">
    <h2 class="text-3xl font-bold text-white">{title}</h2>
    <div class="flex-1 h-px bg-gradient-to-r from-blue-500/50 to-transparent"></div>
    <span class="text-xs text-zinc-500 font-mono">{subtitle}</span>
  </div>

  <div class="relative">
    <div class="absolute left-8 top-0 bottom-0 w-px bg-gradient-to-b from-emerald-400 via-blue-400 to-purple-400"></div>
    <div class="space-y-8">
       {experiences.map((experience: Experience) => {
        return (
          <ExperienceCard {...experience} />
        )
       })}
    </div>
  </div>
</div> 