---
import ProjectCard from './ProjectCard.astro';
import type { Project } from '../../data/projects';

interface Props {
  projects: Project[];
  lang: string;
  allProjectsText: string;
  totalProjects: number;
}

const { projects, lang, allProjectsText, totalProjects } = Astro.props;
---

<section class="py-12">
  <div>
    <div class="flex items-center gap-3 mb-8">
      <h2 class="text-2xl font-bold text-white">{allProjectsText}</h2>
      <div class="flex-1 h-px bg-gradient-to-r from-zinc-600 to-transparent"></div>
      <span class="text-xs text-zinc-500 font-mono" id="project-count">{totalProjects}</span>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6" id="projects-grid">
      {projects.map((project) => (
        <ProjectCard project={project} lang={lang} />
      ))}
    </div>
  </div>
</section> 